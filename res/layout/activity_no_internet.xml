<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_vertical"
	tools:context="com.fonax.android.view.activity.NoInternetActivity"
	tools:ignore="MergeRootFrame" >
	
	<RelativeLayout
		android:id="@+id/noInternet"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical" >
	    
        <TextView
			android:id="@+id/textNoConnecting"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="15sp"
			android:textColor="@color/black"
			android:text="@string/text_no_internet" />
        
        <ImageView
			android:id="@+id/iconBW"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/textNoConnecting"
	        android:src="@drawable/ic_max_bw"
        	android:alpha="0.25"  />
        
    </RelativeLayout>
    
</RelativeLayout>
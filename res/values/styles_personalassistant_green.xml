<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Personalassistant_green" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_personalassistant_green</item>
        <item name="popupMenuStyle">@style/PopupMenu.Personalassistant_green</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Personalassistant_green</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Personalassistant_green</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Personalassistant_green</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Personalassistant_green</item>
        <item name="actionModeBackground">@drawable/cab_background_top_personalassistant_green</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_personalassistant_green</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Personalassistant_green</item>
        <item name="android:textColor">@color/white</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Personalassistant_green.Widget</item>

    </style>

    <style name="ActionBar.Solid.Personalassistant_green" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_personalassistant_green</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_personalassistant_green</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_personalassistant_green</item>
        <item name="progressBarStyle">@style/ProgressBar.Personalassistant_green</item>
    </style>

    <style name="ActionBar.Transparent.Personalassistant_green" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_personalassistant_green</item>
        <item name="progressBarStyle">@style/ProgressBar.Personalassistant_green</item>
    </style>
	
    <style name="PopupMenu.Personalassistant_green" parent="@style/Widget.Sherlock.ListPopupWindow">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_personalassistant_green</item>
    </style>
	
    <style name="DropDownListView.Personalassistant_green" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_personalassistant_green</item>
    </style>

    <style name="ActionBarTabStyle.Personalassistant_green" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_personalassistant_green</item>
    </style>
	
    <style name="DropDownNav.Personalassistant_green" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_personalassistant_green</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_personalassistant_green</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_personalassistant_green</item>
    </style>
    
    <style name="ProgressBar.Personalassistant_green" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_personalassistant_green</item>
    </style>
    
    <style name="ActionButton.CloseMode.Personalassistant_green" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_personalassistant_green</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Personalassistant_green.Widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/PopupMenu.Personalassistant_green</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Personalassistant_green</item>
    </style>

</resources>
<resources>

    <style name="Theme.PersonalAssistant" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_example</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.PersonalAssistant</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.PersonalAssistant</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.PersonalAssistant</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.PersonalAssistant</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.PersonalAssistant</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_example</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_example</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.PersonalAssistant</item>
        <item name="android:textColor">@color/black</item>
        
    </style>

    <style name="ActionBar.Solid.PersonalAssistant" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_example</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_example</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_example</item>
        <item name="android:progressBarStyle">@style/ProgressBar.PersonalAssistant</item>
    </style>

    <style name="ActionBar.Transparent.PersonalAssistant" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_example</item>
        <item name="android:progressBarStyle">@style/ProgressBar.PersonalAssistant</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.PersonalAssistant.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.PersonalAssistant</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.PersonalAssistant</item>
    </style>

</resources>
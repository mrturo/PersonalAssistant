<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Personalassistant_green" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_personalassistant_green</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Personalassistant_green</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Personalassistant_green</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Personalassistant_green</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Personalassistant_green</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Personalassistant_green</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_personalassistant_green</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_personalassistant_green</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Personalassistant_green</item>
        <item name="android:textColor">@color/white</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Personalassistant_green.Widget</item>

    </style>

    <style name="ActionBar.Solid.Personalassistant_green" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_personalassistant_green</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_personalassistant_green</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_personalassistant_green</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Personalassistant_green</item>
    </style>

    <style name="ActionBar.Transparent.Personalassistant_green" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_personalassistant_green</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Personalassistant_green</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Personalassistant_green.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Personalassistant_green</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Personalassistant_green</item>
    </style>

</resources>